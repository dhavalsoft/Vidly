@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Released Date</td>
            <td>Director</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.ReleasedDate.ToShortDateString()</td>
                <td>@movie.Director</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>
